<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="espe.edu.ec.SoapClient.controller.IndexController">
   <children>
      <Label layoutX="229.0" layoutY="62.0" text="Calculadora con Soap" />

      <Label layoutX="71.0" layoutY="133.0" text="Numero 1" />
      <TextField fx:id="numberA" layoutX="138.0" layoutY="129.0" />

      <Label layoutX="71.0" layoutY="168.0" text="Numero 2" />
      <TextField fx:id="numberB" layoutX="138.0" layoutY="164.0" />

      <Button layoutX="138.0" layoutY="212.0" mnemonicParsing="false" text="Sumar" onAction="#handleAdd" />

      <Button layoutX="236.0" layoutY="212.0" mnemonicParsing="false" text="Restar" onAction="#handleSubtract" />

      <Button layoutX="125.0" layoutY="264.0" mnemonicParsing="false" text="Multiplicar" onAction="#handleMultiply" />

      <Button layoutX="235.0" layoutY="264.0" mnemonicParsing="false" text="Dividir" onAction="#handleDivide" />

      <Label layoutX="371.0" layoutY="125.0" text="Resultado:" />

      <Label layoutX="371.0" layoutY="156.0" text="  " fx:id="result" />
   </children>
</AnchorPane>
